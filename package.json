{
	"name": "custom-command-runner",
	"displayName": "Custom Command Runner",
	"description": "Run node script file, methods and shell commands from command pallet",
	"version": "3.0.0",
	"publisher": "Thinker",
	"icon": "images/ccrLogo.png",
	"engines": {
		"vscode": "^1.67.0"
	},
	"license": "MIT",
	"author": {
		"name": "Sivaraman",
		"email": "sendmsg2siva@gmail.com"
	},
	"keywords": [
		"custom command runner",
		"method runner",
		"javascript runner",
		"javascript method runner",
		"script runner",
		"node method runner",
		"function runner",
		"execute method",
		"execute shell commands",
		"shell command runner",
		"shell script runner",
		"vscode method runner"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/R35007/custom-command-runner-vscode-extension"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:custom-command-runner.openCustomCommands",
		"onCommand:custom-command-runner.runCustomCommands"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "custom-command-runner.openCustomCommands",
				"title": "Open Custom Command Pallet",
				"category": "Custom Commands"
			},
			{
				"command": "custom-command-runner.runCustomCommands",
				"title": "Run Custom Commands",
				"category": "Custom Commands"
			}
		],
		"configuration": {
			"title": "Custom Commands",
			"properties": {
				"custom-command-runner.settings.paths": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"default": [],
					"additionalItems": true,
					"description": "set custom folder and files to pick custom commands to run"
				},
				"custom-command-runner.settings.runFileCommand": {
					"type": "string",
					"default": "node ${currentFile}",
					"description": "Provide your shell command here to run the current file"
				}
			}
		},
		"menus": {
			"explorer/context": [
				{
					"command": "custom-command-runner.runCustomCommands",
					"group": "custom-command-runner"
				}
			],
			"editor/context": [
				{
					"command": "custom-command-runner.runCustomCommands",
					"group": "custom-command-runner"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.67.0",
		"@types/glob": "^7.2.0",
		"@types/mocha": "^9.1.0",
		"@types/node": "14.x",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "^8.11.0",
		"glob": "^7.2.0",
		"mocha": "^9.2.2",
		"typescript": "^4.5.5",
		"@vscode/test-electron": "^2.1.3"
	}
}